<?xml version="1.0" encoding="utf-8"?>
<com.heinrichreimersoftware.materialintro.view.parallax.ParallaxLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_parallaxFactor="0.5">

        <ImageButton
            android:id="@+id/introCustomizeHelpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:maxWidth="18dp"
            android:scaleType="centerCrop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_help" />

        <ImageView
            android:id="@+id/introCustomizeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="214dp"
            android:adjustViewBounds="true"
            android:maxWidth="98dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_customize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/introCustomizeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Time for customization!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introCustomizeImageView" />

        <TextView
            android:id="@+id/introCustomizeSecondTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="All features are optional, but strongly recommended."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introCustomizeTextView" />

        <CheckBox
            android:id="@+id/introCustomizeBackgroundCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Background Music"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:checked="true"
            android:layout_marginTop="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introCustomizeSecondTextView" />

        <CheckBox
            android:id="@+id/introCustomizeBreathingCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4-7-8 Breathing Helper"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:checked="true"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introCustomizeBackgroundCheckBox" />


    </android.support.constraint.ConstraintLayout>

</com.heinrichreimersoftware.materialintro.view.parallax.ParallaxLinearLayout>